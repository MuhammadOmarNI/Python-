test_settings={
    "theme":"light",
    "volume":"high"
}


def add_setting(settings_dict,settings_tuple):
    key,value = settings_tuple

    key = str(key).lower()
    value = str(value).lower()
    
    if key in settings_dict:
        return (f"Setting '{key}' already exists! Cannot add a new setting with this name.")
    else:
        settings_dict[key]= value
        return(f"Setting '{key}' added with value '{value}' successfully!")


def update_setting(settings_dict,settings_tuple):
    key,value = settings_tuple
    key = str(key).lower()
    value = str(value).lower()
    
    if key in settings_dict:
        settings_dict[key] = value
        return(f"Setting '{key}' updated to '{value}' successfully!")
    else:
        return(f"Setting '{key}' does not exist! Cannot update a non-existing setting.")




def delete_setting(settings_dict,key):
    key1 = key.lower()
    
    if key1 in settings_dict:
        del settings_dict[key1]
        return (f"Setting '{key1}' deleted successfully!")
    else:
        return (f"Setting not found!")


def view_settings(settings_dict):
    result="Current User Settings:\n"
    if not settings_dict:
        return "No settings available."
    else:
        for key,value in settings_dict.items():
            result += (f"{key.title()}: {value}\n")
    return result


print(view_settings(test_settings))
